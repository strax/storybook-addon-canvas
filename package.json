{
  "name": "storybook-decorators",
  "version": "0.1.0",
  "description":
    "Provides small, composable decorators for enhancing Storybook development",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "Sami Kukkonen <sami@samikukkonen.fi>",
  "license": "MIT",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "rollup -c",
    "start": "start-storybook -p 9001 -c example/.storybook"
  },
  "devDependencies": {
    "@storybook/react": "^3.4.0-rc.3",
    "@types/enzyme": "^3.1.9",
    "@types/jest": "^22.2.0",
    "@types/react": "^16.0.38",
    "@types/react-dom": "^16.0.4",
    "@types/storybook__react": "^3.0.7",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "jest-image-snapshot": "^2.4.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "rollup": "^0.57.1",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-typescript2": "^0.12.0",
    "rollup-plugin-url": "^1.3.0",
    "ts-jest": "^22.4.2",
    "typescript": "^2.8.0-rc"
  },
  "dependencies": {
    "resize-observer-polyfill": "^1.5.0",
    "styled-components": "^3.1.6"
  },
  "peerDependencies": {
    "@storybook/addons": ">= 3.3.13",
    "@storybook/react": ">= 3.3.13",
    "react": "^16.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "\\.svg$": "identity-obj-proxy"
    },
    "setupFiles": ["<rootDir>/testSetup.js"],
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "node"],
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    }
  }
}
